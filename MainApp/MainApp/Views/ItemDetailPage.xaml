<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="DeleteItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ImageButton" TargetType="ImageButton">
                <Setter Property="BackgroundColor" Value="#404040"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Name:" FontSize="Medium" TextColor="#FF0245"/>
        <Label Text="{Binding Item.Name}" FontSize="Small" TextColor="#FF0245"/>
        <Label Text="Description:" FontSize="Medium" TextColor="#FF0245" />
        <Label Text="{Binding Item.Description}" FontSize="Small" TextColor="#FF0245"/>
        <Image Source="{Binding Item.Image.Source}"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>
        <Button Text="Save to storage"
            HorizontalOptions="FillAndExpand"
            Clicked="Download"/>
    </StackLayout>
</ContentPage>